loadstring([[
local Players = game:GetService("Players")
local Player = Players.LocalPlayer
local PlayerGui = Player:WaitForChild("PlayerGui")

local ScreenGui = Instance.new("ScreenGui")
ScreenGui.Name = "FuturisticLoading"
ScreenGui.ResetOnSpawn = false
ScreenGui.Parent = PlayerGui

local Frame = Instance.new("Frame")
Frame.Size = UDim2.new(1, 0, 1, 0)
Frame.BackgroundColor3 = Color3.new(0, 0, 0)
Frame.BorderSizePixel = 0
Frame.Parent = ScreenGui

-- Warning Icon
local Warning = Instance.new("ImageLabel")
Warning.Size = UDim2.new(0, 100, 0, 100)
Warning.Position = UDim2.new(0.5, -50, 0.2, -50)
Warning.BackgroundTransparency = 1
Warning.Image = "rbxassetid://7695201739" -- Yellow warning triangle
Warning.Parent = Frame

-- Loading Text
local LoadingText = Instance.new("TextLabel")
LoadingText.Size = UDim2.new(1, 0, 0, 50)
LoadingText.Position = UDim2.new(0, 0, 0.35, 0)
LoadingText.BackgroundTransparency = 1
LoadingText.Text = "Loading, Please Wait..."
LoadingText.TextColor3 = Color3.new(1, 1, 1)
LoadingText.TextScaled = true
LoadingText.Font = Enum.Font.GothamBold
LoadingText.Parent = Frame

-- Loading Bar Background
local BarBg = Instance.new("Frame")
BarBg.Size = UDim2.new(0.6, 0, 0.05, 0)
BarBg.Position = UDim2.new(0.2, 0, 0.5, 0)
BarBg.BackgroundColor3 = Color3.fromRGB(40, 40, 40)
BarBg.BorderSizePixel = 0
BarBg.Parent = Frame

-- Loading Bar Fill
local BarFill = Instance.new("Frame")
BarFill.Size = UDim2.new(0, 0, 1, 0)
BarFill.Position = UDim2.new(0, 0, 0, 0)
BarFill.BackgroundColor3 = Color3.fromRGB(255, 0, 0)
BarFill.BorderSizePixel = 0
BarFill.Parent = BarBg

-- Glow
local UIGradient = Instance.new("UIGradient", BarFill)
UIGradient.Rotation = 0
UIGradient.Color = ColorSequence.new{
	ColorSequenceKeypoint.new(0.0, Color3.fromRGB(255,0,0)),
	ColorSequenceKeypoint.new(0.5, Color3.fromRGB(0,255,0)),
	ColorSequenceKeypoint.new(1.0, Color3.fromRGB(0,0,255))
}
UIGradient.Offset = Vector2.new(0, 0)

-- Percentage Label
local PercentText = Instance.new("TextLabel")
PercentText.Size = UDim2.new(1, 0, 1, 0)
PercentText.Position = UDim2.new(0, 0, 0, 0)
PercentText.BackgroundTransparency = 1
PercentText.Text = "0%"
PercentText.TextColor3 = Color3.new(1, 1, 1)
PercentText.TextScaled = true
PercentText.Font = Enum.Font.GothamBold
PercentText.Parent = BarBg

-- Animate Loading Bar
local duration = 120
local stepTime = 0.1
local steps = duration / stepTime

task.spawn(function()
	local t = 0
	while t <= duration do
		local percent = math.floor((t / duration) * 100)
		BarFill.Size = UDim2.new(percent / 100, 0, 1, 0)
		PercentText.Text = percent .. "%"
		
		-- Animate RGB Gradient
		UIGradient.Offset = Vector2.new((tick() % 5) / 5, 0)

		wait(stepTime)
		t = t + stepTime
	end
	PercentText.Text = "100%"
	wait(0.5)
	ScreenGui:Destroy()
end)
]])()
