loadstring([[
local ScreenGui = Instance.new("ScreenGui")
local Frame = Instance.new("Frame")
local LoadingBarBG = Instance.new("Frame")
local LoadingBar = Instance.new("Frame")
local LoadingText = Instance.new("TextLabel")
local WarningIcon = Instance.new("TextLabel")
local Percentage = Instance.new("TextLabel")

-- Parent GUI
ScreenGui.Parent = game.CoreGui
ScreenGui.IgnoreGuiInset = true
ScreenGui.ResetOnSpawn = false

-- Main Frame
Frame.Size = UDim2.new(1, 0, 1, 0)
Frame.Position = UDim2.new(0, 0, 0, 0)
Frame.BackgroundColor3 = Color3.fromRGB(10, 10, 10)
Frame.BorderSizePixel = 0
Frame.Parent = ScreenGui

-- Loading Bar Background
LoadingBarBG.Size = UDim2.new(0.6, 0, 0.05, 0)
LoadingBarBG.Position = UDim2.new(0.2, 0, 0.5, 0)
LoadingBarBG.BackgroundColor3 = Color3.fromRGB(40, 40, 40)
LoadingBarBG.BorderSizePixel = 0
LoadingBarBG.Parent = Frame

-- Actual Loading Bar
LoadingBar.Size = UDim2.new(0, 0, 1, 0)
LoadingBar.Position = UDim2.new(0, 0, 0, 0)
LoadingBar.BackgroundColor3 = Color3.fromRGB(0, 255, 255)
LoadingBar.BorderSizePixel = 0
LoadingBar.Parent = LoadingBarBG

-- Glow Effect
local UIS = game:GetService("TweenService")
local function RGBGlow()
    while true do
        for i = 0, 255, 5 do
            LoadingBar.BackgroundColor3 = Color3.fromRGB(255 - i, i, 255)
            wait(0.05)
        end
        for i = 0, 255, 5 do
            LoadingBar.BackgroundColor3 = Color3.fromRGB(i, 255, 255 - i)
            wait(0.05)
        end
        for i = 0, 255, 5 do
            LoadingBar.BackgroundColor3 = Color3.fromRGB(255, 255 - i, i)
            wait(0.05)
        end
    end
end

-- Loading Text
LoadingText.Size = UDim2.new(1, 0, 0.1, 0)
LoadingText.Position = UDim2.new(0, 0, 0.6, 0)
LoadingText.BackgroundTransparency = 1
LoadingText.Text = "Loading... Please Wait"
LoadingText.Font = Enum.Font.GothamBold
LoadingText.TextSize = 28
LoadingText.TextColor3 = Color3.fromRGB(255, 255, 255)
LoadingText.Parent = Frame

-- Warning Icon
WarningIcon.Size = UDim2.new(1, 0, 0.1, 0)
WarningIcon.Position = UDim2.new(0, 0, 0.4, 0)
WarningIcon.BackgroundTransparency = 1
WarningIcon.Text = "⚠️"
WarningIcon.Font = Enum.Font.SourceSansBold
WarningIcon.TextSize = 40
WarningIcon.TextColor3 = Color3.fromRGB(255, 60, 60)
WarningIcon.Parent = Frame

-- Percentage Label
Percentage.Size = UDim2.new(1, 0, 0.05, 0)
Percentage.Position = UDim2.new(0, 0, 0.55, 0)
Percentage.BackgroundTransparency = 1
Percentage.Text = "0%"
Percentage.Font = Enum.Font.GothamBold
Percentage.TextSize = 24
Percentage.TextColor3 = Color3.fromRGB(255, 255, 255)
Percentage.Parent = Frame

-- Start RGB glow in a coroutine
coroutine.wrap(RGBGlow)()

-- Loading Bar Progress Animation
local totalTime = 20 -- seconds
local steps = 100
for i = 1, steps do
    local pct = i
    Percentage.Text = pct .. "%"
    LoadingBar:TweenSize(UDim2.new(pct / 100, 0, 1, 0), "Out", "Quad", 0.2, true)
    wait(totalTime / steps)
end

wait(1)
ScreenGui:Destroy()
]])()


